@model IEnumerable<invoiceProject.Models.UserGiftCard>;
@{ ViewData["Title"] = "צפייה בגיפט-קארדים";
    Layout = "_UserLayout";
}

@section css {
    <link href="@Url.Content("~/css/ViewInvoices.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/DeleteButton.css")" rel="stylesheet" />
}

<div style="margin-top: 50px;" id="content-wrapper" class="myAccountCss d-flex flex-column">
    <div class="container">
        <h1 class="MainTitel">גיפט-קארדים</h1>
        <div>
            <input id="myInput" type="text" name="search" placeholder="חיפוש..." class="form-control search-input" data-table="customers-list">
        </div>
        <div style="overflow-x: scroll; width: 100%;">
            <table class="table table-striped table-bordered js-sort-table customers-list">

                <tr class="thead-dark">
                    <th> @Html.DisplayNameFor(model => model.giftCard.GiftCardName) </th>
                    <th class="js-sort-number"> @Html.DisplayNameFor(model => model.giftCard.Price) </th>
                    <th> @Html.DisplayNameFor(model => model.Count) </th>
                </tr>

                @{ if (Model.Count() != 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="DeleteGiftCard" asp-route-id="@item.GiftCardID" style="text-decoration-line: none; float:right">
                                        <i class="fa fa-trash" style=" cursor: pointer;"></i> |
                                    </a>
                                    <a asp-action="EditGiftCard" asp-route-id="@item.GiftCardID" style="text-decoration-line: none; float:right; margin-right:2%">
                                        <i class="fas fa-pen" style=" cursor: pointer;"></i>
                                    </a>
                                    @Html.DisplayFor(modelItem => item.giftCard.GiftCardName)
                                </td>
                                <td> @Html.DisplayFor(modelItem => item.giftCard.Price)</td>
                                <td> @Html.DisplayFor(modelItem => item.Count)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">אין לך שום גיפט-קארדים</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/sort-table.min.js"></script>
    <script src="~/js/searchBoxFilter.js"></script>
}



