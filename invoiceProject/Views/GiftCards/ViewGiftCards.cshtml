@model IEnumerable<invoiceProject.Models.GiftCard>;
@{ ViewData["Title"] = "צפייה בגיפט-קארדים";
    Layout = "_UserLayout";
}

@section css {
    <link href="@Url.Content("~/css/ViewInvoices.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/DeleteButton.css")" rel="stylesheet" />
}

<div style="margin-top: 50px;" id="content-wrapper" class="myAccountCss d-flex flex-column">
    <div class="container">
        <h1 class="MainTitel">גיפט-קארדים</h1>
        <div>
            <input id="myInput" type="text" name="search" placeholder="חיפוש..." class="form-control search-input" data-table="customers-list">
        </div>
        <table class="table table-striped table-bordered js-sort-table customers-list">

            <tr class="thead-dark">
                <th> @Html.DisplayNameFor(model => model.GiftCardName) </th>
                <th> @Html.DisplayNameFor(model => model.ExpireDate) </th>
                <th> @Html.DisplayNameFor(model => model.userGiftCard.FirstOrDefault().price) </th>
            </tr>

            @{ if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="DeleteGiftCard" asp-route-id="@item.GiftCardID" style="text-decoration-line: none">
                                    <i class="fa fa-trash" style=" cursor: pointer;"></i>
                                </a>
                                @Html.DisplayFor(modelItem => item.GiftCardName)
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.ExpireDate)</td>
                            <td>סדר את הסכום @*@Html.DisplayFor(modelItem => item.Price)*@</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">אין לך שום גיפט-קארדים</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>



@section Scripts {
    <script>
        // Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
    <script src="~/js/sort-table.min.js"></script>
    <script src="~/js/searchBoxFilter.js"></script>
    @*<script src="~/js/Sort_Tables.js"></script>*@
}