@model invoiceProject.Models.Invoice
@{ ViewData["Title"] = "מחיקת חשבונית";
    Layout = "_UserLayout"; }
@section css {
    <link href="@Url.Content("~/css/DeleteButton.css")" rel="stylesheet" />
}
<div style="margin:auto;" class="col-6">
    <form style="text-align:center; margin-bottom: 15%;" asp-controller="Invoices" asp-action="DeleteInvoice">
        <h1 style="font-size:xx-large" class="hrOther">מחיקת חשבונית</h1>
        <p style="font-size:x-large">האם את/ה בטוח/ה שברצונך למחוק חשבונית זו?</p>
        <div class="clearfix" style="margin-left:9%">
            <a style="text-decoration-line:none; width:44%; color:black" asp-action="AdminViewUsers" class="cancelbtn other">ביטול</a>
            <input type="hidden" asp-for="InvoiceID" />
            <input style="width:44%" type="submit" value="מחק" class="deletebtn other" />
        </div>
    </form>
</div>














