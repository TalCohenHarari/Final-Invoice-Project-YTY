@model invoiceProject.Models.User
@{ ViewData["Title"] = "הרשמה";
    Layout = "_Layout-2"; }
@section css {
    <link href="@Url.Content("~/css/Form.css")" rel="stylesheet" />
}


<div class="wrapper fadeInDown">

    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="inactive underlineHover"><a asp-controller="Users" asp-action="Login">התחברות</a></h2>
        <h2 class="active">הרשמה</h2>

        <!-- Register Form -->
        <form asp-action="Register">
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="FirstName" type="text" id="firstName" class="fadeIn second" placeholder="שם פרטי" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger" style="padding-right:36%;"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="LastName" type="text" id="lastName" class="fadeIn second" placeholder="שם משפחה" />
                </div>
                <span asp-validation-for="LastName" class="text-danger" style="padding-right:36%;"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="UserName" type="text" id="userName" class="fadeIn second" placeholder="שם משתמש" />
                </div>
                <span asp-validation-for="UserName" class="text-danger" style="padding-right:36%;"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="Password" type="password" id="password" class="fadeIn third" placeholder="סיסמה" />
                </div>
                <span asp-validation-for="Password" class="text-danger" style="padding-right:36%;"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="Email" type="email" id="email" class="fadeIn third" placeholder="אימייל" />
                </div>
                <span asp-validation-for="Email" class="text-danger" style="padding-right:36%;"></span>
            </div>

            <input type="submit" class="fadeIn fourth" value="הרשמה">
            @if (ViewData["RegisterError"] != null)
            {
                <div style="color:red; margin-bottom:7%;">@ViewData["RegisterError"]</div>
            }
        </form>

        <!-- Remind Passowrd -->
        <!-- <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div> -->

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}