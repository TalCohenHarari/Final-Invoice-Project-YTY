@model invoiceProject.Models.User
@{ ViewData["Title"] = "עריכת משתמש";
    Layout = "_AdminLayout"; }

@section css {
    <link href="@Url.Content("~/css/NewInvoice.css")" rel="stylesheet" />
}


<div id="mainDiv" class="row">
    <div class="col-1"></div>
    <form id="contact-form" name="contact-form" class="MyForm" asp-action="AdminEditUser">
        <div class="row">
            <input asp-for="UserID" type="hidden" />
            <input asp-for="IsAdmin" type="hidden" />
            <h2 class="h1-responsive font-weight-bold text-center my-4" style="padding-right: 13px;">
                ערוך
                פירטי משתמש
            </h2>
            @if (ViewData["AdminEditUserError"] != null)
            {
                <span class="col-4"></span>
                <div class="col-4" style=" padding: 3% 15% 0 0;">
                    <span style=" color:red; padding-top:8%;">@ViewData["AdminEditUserError"]</span>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="FirstName" for="subject" class="">שם פרטי</label>
                    <input asp-for="FirstName" type="text" id="subject" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="LastName" for="subject" class="">שם משפחה</label>
                    <input asp-for="LastName" type="text" id="subject" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="UserName" for="subject" class="">שם משתמש</label>
                    <input asp-for="UserName" type="text" id="subject" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="Password" for="subject" class="">סיסמה</label>
                    <input asp-for="Password" type="password" id="subject" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="EnteranceDate" for="subject" class="">תאריך הצטרפות</label>
                    <input asp-for="EnteranceDate" type="datetime-local" id="subject" class="form-control">
                    <span asp-validation-for="EnteranceDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="Email" for="subject" class="">אימייל</label>
                    <input asp-for="Email" type="email" id="subject" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <input style="background-color:black !important;" class="btn btn-primary btn-block sendButton"
                   type="submit" value="שלח" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}