@model invoiceProject.Models.User
@{ ViewData["Title"] = "Index";
    Layout = "_AdminLayout"; }

@section css {
    <link href="@Url.Content("~/css/NewInvoice.css")" rel="stylesheet" />
}


<div id="mainDiv" class="row">
    <div class="col-1"></div>
    <form id="contact-form" name="contact-form" class="MyForm" asp-action="AdminNewUser">
        <div class="row">
            <h2 class="h1-responsive font-weight-bold text-center my-4" style="padding-right: 13px;">
                הזן
                פרטי משתמש
            </h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="FirstName" for="subject" class="">שם פרטי</label>
                    <input asp-for="FirstName" type="text" id="subject" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="LastName" for="subject" class="">שם משפחה</label>
                    <input asp-for="LastName" type="text" id="subject" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="UserName" for="subject" class="">שם משתמש</label>
                    <input asp-for="UserName" type="text" id="subject" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="Password" for="subject" class="">סיסמה</label>
                    <input asp-for="Password" type="password" id="subject" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="EnteranceDate" for="subject" class="">תאריך הצטרפות</label>
                    <input asp-for="EnteranceDate" type="date" id="subject" class="form-control">
                    <span asp-validation-for="EnteranceDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="md-form  form-group">
                    <label asp-for="Email" for="subject" class="">אימייל</label>
                    <input asp-for="Email" type="email" id="subject" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <input style="background-color: black;" class="btn btn-primary btn-block sendButton"
                   type="submit" value="הוסף" />
        </div>

    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}