@model invoiceProject.Models.User
@{
    ViewData["Title"] = "התחברות";
    Layout = "_Layout-2";
}
@section css {
    <link href="@Url.Content("~/css/Form.css")" rel="stylesheet" />
}



<div class="wrapper fadeInDown">

    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> התחברות</h2>
        <h2 class="inactive underlineHover"><a asp-controller="Users" asp-action="Register">הרשמה</a></h2>



        <!-- Login Form -->
        <form asp-action="Login">

            <div class="row">
                <div class="col-md-12">
                    <input asp-for="UserName" type="text" id="login" class="fadeIn second" placeholder="שם משתמש" />
                </div>
                <span asp-validation-for="UserName" class="text-danger" style="padding-right:36%;"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="Password" type="password" id="password" class="fadeIn third" placeholder="סיסמה" />
                </div>
                <span asp-validation-for="Password" class="text-danger" style="padding-right:36%;"></span>
            </div>
            <input type="submit" class="fadeIn fourth" value="התחבר">
            @if (ViewData["LoginError"] != null)
            {
                <div style="color:red; margin-bottom:7%;">@ViewData["LoginError"]</div>
            }
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}