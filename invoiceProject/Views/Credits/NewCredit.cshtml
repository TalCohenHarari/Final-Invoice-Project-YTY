@model invoiceProject.Models.Credit

@{
    ViewData["Title"] = "זיכוי חדש";
    Layout = "_UserLayout";
}
@section css {
    <link href="@Url.Content("~/css/NewInvoice.css")" rel="stylesheet" />
}


<div id="mainDiv" class="row">
    <div class="col-1"></div>
    <form id="contact-form" name="contact-form" class="MyForm" asp-action="NewCredit">
        <div class="row">
            <h2 class="h1-responsive font-weight-bold text-center my-4" style="padding-right: 13px;">
                הזן
                פרטי זיכוי
            </h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form form-group">
                    <label asp-for="StoreName" class="">שם החנות</label>
                    <input asp-for="StoreName" type="text" id="subject" class="form-control"/>
                    <span asp-validation-for="StoreName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form form-group">
                    <label asp-for="ExpireDate" class="">תוקף זיכוי</label>
                    <input asp-for="ExpireDate" type="datetime-local" id="subject" class="form-control"/>
                    <span asp-validation-for="ExpireDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form form-group">
                    <label asp-for="Amount" class="">סכום</label>
                    <input asp-for="Amount" type="number" id="subject" class="form-control"/>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="md-form form-group">
                    <label class="">קטגוריה</label>
                    <select class="form-control">
                        <option></option>
                        <option>ביגוד והנעלה</option>
                        <option>ביטוח</option>
                        <option>חשמל</option>
                        <option>דלק</option>
                        <option>מזון</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <input class="btn btn-primary btn-block sendButton " type="submit" value="שליחה" />
        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
